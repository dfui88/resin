<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title @ViewBag.Collection - Resin Extensible Search Engine</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/css/theme.css">
</head>
<body>
    <a href="/?collection=@ViewBag.Collection" title="@ViewBag.Collection"><h1 class="logo">@ViewBag.Collection</h1></a>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div>
            <p>Non-tracking search (powered by <a href="https://github.com/kreeben/resin" title="Resin v0.33">Resin</a>).</p>
        </div>
    </footer>
</body>
</html>